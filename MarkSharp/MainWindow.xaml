<Window x:Class="MarkSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarkSharp"
        mc:Ignorable="d"
        Title="Mark#" Height="720" Width="1280"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        ui:WindowHelper.UseModernWindowStyle="True"
        KeyDown="MainWindow_KeyDown" Icon="/logo-100.png">
    <DockPanel>
        <ui:CommandBar DockPanel.Dock="Top">
            <ui:CommandBar.Content>
                <StackPanel Orientation="Horizontal">
                    <ui:AppBarButton x:Name="OpenFileButton"
                                     Icon="OpenFile"
                                     Label="Open"
                                     ToolTip="Open (Ctrl+O)"
                                     Click="OpenFileButton_Click" />

                    <ui:AppBarButton x:Name="SaveButton"
                                     Icon="Save"
                                     Label="Save"
                                     ToolTip="Save (Ctrl+S)"
                                     Click="SaveButton_Click" />

                    <ui:AppBarButton x:Name="SaveAsButton"
                                     Label="Save As"
                                     Icon="Edit"
                                     ToolTip="Save As (Ctrl+Shift+S)"
                                     Click="SaveAsButton_Click" >
                    </ui:AppBarButton>
                </StackPanel>
            </ui:CommandBar.Content>
        </ui:CommandBar>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0">
                <ui:AppBarButton x:Name="ThemeToggleButton"
                                 Label="Toggle Theme"
                                 Height="35" Width="40"
                                 ToolTip="Toggle Theme"
                                 Click="ThemeToggleButton_Click" >
                    <ui:AppBarButton.Icon>
                        <ui:FontIcon x:Name="ThemeToggleIcon" Glyph="&#xE708;" FontSize="18"/>
                    </ui:AppBarButton.Icon>
                </ui:AppBarButton>
            </StatusBarItem>

            <StatusBarItem Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="SyncScrollCheckBox"
                              Content="Sync Scroll"
                              IsChecked="True"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              ToolTip="Toggle real-time scroll syncing"
                              Click="SyncScrollCheckBox_Click" />

                    <TextBlock x:Name="WordCountLabel" 
                               Text="0 words" 
                               Margin="0,0,10,0" 
                               VerticalAlignment="Center" />
                </StackPanel>
            </StatusBarItem>

        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" MinWidth="300" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="MARKDOWN"
                       Grid.Row="0" Grid.Column="0"
                       Padding="15,10,10,10"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Opacity="0.7" />

            <TextBlock Text="PREVIEW"
                       Grid.Row="0" Grid.Column="2"
                       Padding="10,10,10,10"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Opacity="0.7" />

            <TextBox x:Name="MarkdownTextBox"
                     Grid.Column="0" Grid.Row="1"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     BorderThickness="0"
                     Padding="15,0,15,15"
                     FontFamily="Consolas"
                     FontSize="14"
                     Text="" 
                     TextChanged="MarkdownTextBox_TextChanged"
                     ScrollViewer.ScrollChanged="MarkdownTextBox_ScrollChanged"/>

            <GridSplitter Grid.Column="1"
                          Grid.Row="0" Grid.RowSpan="2"
                          Width="5"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="LightGray"
                          ShowsPreview="True" />

            <wv2:WebView2 x:Name="PreviewBrowser"
                          Grid.Column="2" Grid.Row="1"
                          WebMessageReceived="HandlePreviewScrollMessage" />
        </Grid>
    </DockPanel>
</Window>

