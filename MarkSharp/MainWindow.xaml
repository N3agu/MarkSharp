<Window x:Class="MarkSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarkSharp"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Mark#" Height="720" Width="1280"
        ui:WindowHelper.UseModernWindowStyle="True"
        KeyDown="MainWindow_KeyDown"
        Closing="MainWindow_Closing"
        Icon="/logo-100.png">
    <DockPanel>
        <ui:CommandBar DockPanel.Dock="Top">
            <ui:CommandBar.Content>
                <StackPanel Orientation="Horizontal">

                    <ui:AppBarButton x:Name="NewFileButton"
                                     Cursor="Hand"
                                     Icon="Add"
                                     Label="New"
                                     HorizontalAlignment="Left"
                                     ToolTip="New (Ctrl+N)"
                                     Click="NewFileButton_Click" />

                    <ui:AppBarButton x:Name="OpenFileButton"
                                     Icon="OpenFile"
                                     Cursor="Hand"
                                     Label="Open"
                                     HorizontalAlignment="Left"
                                     ToolTip="Open (Ctrl+O)"
                                     Click="OpenFileButton_Click" />

                    <ui:AppBarButton x:Name="SaveButton"
                                     Icon="Save"
                                     Cursor="Hand"
                                     Label="Save"
                                     HorizontalAlignment="Left"
                                     ToolTip="Save (Ctrl+S)"
                                     Click="SaveButton_Click" />

                    <ui:AppBarButton x:Name="SaveAsButton"
                                     Icon="Edit"
                                     Cursor="Hand"
                                     HorizontalAlignment="Left"
                                     Label="Save As"
                                     ToolTip="Save As (Ctrl+Shift+S)"
                                     Click="SaveAsButton_Click" />
                </StackPanel>
            </ui:CommandBar.Content>

            <ui:CommandBar.PrimaryCommands>
                <ui:AppBarButton x:Name="ExportHtmlButton"
                                 Icon="Share"
                                 Label="Export"
                                 ToolTip="Export as HTML (Ctrl+Shift+E)"
                                 Click="ExportHtmlButton_Click"/>

                <ui:AppBarButton x:Name="PrintButton"
                                 Icon="Print"
                                 Label="Print"
                                 ToolTip="Print to PDF (Ctrl+P)"
                                 Click="PrintButton_Click"/>
            </ui:CommandBar.PrimaryCommands>

        </ui:CommandBar>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0">
                <ui:AppBarButton x:Name="ThemeToggleButton"
                                 Label="Toggle Theme"
                                 Cursor="Hand"
                                 Height="35" Width="40"
                                 ToolTip="Toggle Theme"
                                 Click="ThemeToggleButton_Click" >
                    <ui:AppBarButton.Icon>
                        <ui:FontIcon x:Name="ThemeToggleIcon" Glyph="&#xE708;" FontSize="18"/>
                    </ui:AppBarButton.Icon>
                </ui:AppBarButton>
            </StatusBarItem>

            <StatusBarItem Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="SyncScrollCheckBox"
                              Content="Sync Scroll"
                              Cursor="Hand"
                              IsChecked="True"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              ToolTip="Toggle real-time scroll syncing"
                              Click="SyncScrollCheckBox_Click" />

                    <TextBlock x:Name="WordCountLabel" 
                               Text="0 words" 
                               Margin="0,0,10,0" 
                               VerticalAlignment="Center" />
                </StackPanel>
            </StatusBarItem>

        </StatusBar>

        <TabControl x:Name="EditorTabControl"
            SelectionChanged="EditorTabControl_SelectionChanged" Cursor="Arrow">

            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem" BasedOn="{StaticResource DefaultTabItemStyle}">
                    <Setter Property="MinWidth" Value="120"/>
                    <Setter Property="MinHeight" Value="17"/>
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding HeaderText}"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.ItemContainerStyle>
        </TabControl>

    </DockPanel>
</Window>

